<div class="container">
  <h1><%=  @rocket.name %></h1>

  <div class="cards">
    <div class="card">
       <% if @rocket.photo.attached? %>
              <%= cl_image_tag @rocket.photo.key , width: 340, height: 200, crop: :fill %>
            <% else %>
              <%= cl_image_tag("https://res.cloudinary.com/disabu2ji/image/upload/v1629381653/Rent%20a%20Rocket/soyuz_rocket_launch_rocket_dxw0wg.jpg", width: 340, height: 200, crop: :fill) %>
            <% end %>
      <p> Price: <%= @rocket.price %></p>
      <p> Fuel: <%= @rocket.fuel %></p>
      <p> Description: <%= @rocket.description %></p>
      <p> Address: <%= @rocket.address %>
      <br>
      <% unless @rocket.bookings.empty? %>
        <% if policy(@rocket).update? %>
          <%= @booking.status %>
          <%= link_to "Confirm Booking", booking_path( @booking), method: "patch", class: "btn btn-primary"%>
        <% end %>
      <% end %>
    </div>
  </div>
  <br>
  <%= link_to "Create booking", new_rocket_booking_path(@rocket), class: "btn btn-primary" %>
  <%= link_to "Show my bookings", bookings_path, class: "btn btn-primary" %>
  <%= link_to "Back to all rockets", rockets_path, class: "btn btn-primary" %>
</div>
