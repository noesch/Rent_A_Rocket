<div class="container">
  <h1>Marvel at our glorious rockets</h1>
  <br>
    <div class="cards">
      <% @rockets.each do |rocket| %>
        <%= link_to rocket_path(rocket) do %>
          <div class="card">
            <% if rocket.photo.attached? %>
              <%= cl_image_tag rocket.photo.key , width: 340, heigth: 200, crop: :fill %>
            <% else %>
              <%= cl_image_tag("https://res.cloudinary.com/disabu2ji/image/upload/v1629381653/Rent%20a%20Rocket/soyuz_rocket_launch_rocket_dxw0wg.jpg", width: 340, height: 200, crop: :fill) %>
            <% end %>
            <br>
            <p> Name: <%= rocket.name %> </p>
            <p> Price: <%= rocket.price %></p>
            <p> Fuel: <%= rocket.fuel %></p>
            <p> Description: <%= rocket.description %></p>
            <p> Address: <%= rocket.address %>
          </div>
        <% end %>
      <% end %>
     <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
  <br>
  <%= link_to "Create rocket", new_rocket_path, class: "btn btn-primary"%>

</div>
